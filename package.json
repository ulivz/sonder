{
  "name": "sonder",
  "version": "0.0.0",
  "description": "A fading JavaScript library for building user interfaces.",
  "repository": {
    "url": "ULIVZ/sonder",
    "type": "git"
  },
  "main": "dist/index.common.js",
  "files": [
    "dist"
  ],
  "scripts": {
    "test:cov": "jest --coverage && npm run lint",
    "test": "npm run lint && jest",
    "lint": "xo",
    "prepublish": "npm run build",
    "build": "bili --format umd --name sonder --banner --exports named --js babel --no-babel.babelrc",
    "example": "poi",
    "build:example": "poi build",
    "gh": "gh-pages -d example/dist",
    "deploy": "npm run build:example && npm run gh"
  },
  "author": "ULIVZ <chl814@foxmail.com>",
  "license": "MIT",
  "poi": {
    "entry": "example/index.js",
    "dist": "example/dist",
    "homepage": "/"
  },
  "jest": {
    "testEnvironment": "node"
  },
  "babel": {
    "env": {
      "test": {
        "presets": [
          [
            "env",
            {
              "targets": {
                "node": "current"
              }
            }
          ]
        ]
      }
    }
  },
  "dependencies": {
    "@nx-js/observer-util": "^4.1.2",
    "list-diff2": "^0.1.4",
    "snabbdom": "^0.7.1"
  },
  "devDependencies": {
    "babel-preset-env": "^1.4.0",
    "eslint-config-rem": "^4.0.0",
    "gh-pages": "^2.0.1",
    "jest-cli": "^24.8.0",
    "poi": "^12.7.1",
    "xo": "^0.24.0"
  },
  "xo": {
    "extends": "rem",
    "envs": [
      "jest"
    ]
  }
}
